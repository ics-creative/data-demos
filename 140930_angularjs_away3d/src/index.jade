doctype html
html(ng-app="MyApp")
	head
		meta(charset="utf-8")
		title Away3D Camera Simulator
		meta(name="viewport" content="user-scalable=no,initial-scale = 1.0,maximum-scale = 1.0")
		link(rel="stylesheet" type="text/css" href="css/topcoat-desktop-dark.min.css")
		link(rel="stylesheet" type="text/css" href="css/main.css")
		link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600' rel='stylesheet' type='text/css')
		// AngularJSの初期化
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.3/angular.min.js")
		// Away3Dの初期化
		script(src="../libs/swfobject.js")
		script(src="../libs/awayjs-core.next.min.js")
		script(src="../libs/stagegl-core.next.min.js")
		script(src="../libs/stagegl-extensions.next.min.js")
		// 制御コード
		script(src="controllers.js")
	body(ng-controller="MyController")
		div(id="ui")
			div(class="head")
			header
				h2 Camera Position
			section
				p X
					input(type="range", ng-model="sliderX", value="0", min="-3000", max="3000", class="topcoat-range")
					label(ng-bind="sliderX")
					span &nbsp;px

				p Y
					input(type="range", ng-model="sliderY", value="0", min="-3000", max="3000", class="topcoat-range" )
					label(ng-bind="sliderY")
					span &nbsp;px

				p Z
					input(type="range", ng-model="sliderZ", value="-1000", min="-3000", max="3000", class="topcoat-range" )
					label(ng-bind="sliderZ")
					span &nbsp;px

			header
				h2 Camera LookAt
			section
				label(class="topcoat-switch")
					input(type="checkbox" class="topcoat-switch__input", ng-model="checkBoxLookAt" ng-bind="isLookAt")
					div(class="topcoat-switch__toggle")

			header
				h2 Camera Rotation
			section
				p X
					input(type="range", ng-model="sliderRotX", ng-disabled="checkBoxLookAt", value="0", min="-360", max="360", class="topcoat-range")
					label(ng-bind="sliderRotX")
					span &nbsp;deg

				p Y
					input(type="range", ng-model="sliderRotY", ng-disabled="checkBoxLookAt", value="0", min="-360", max="360", class="topcoat-range")
					label(ng-bind="sliderRotY")
					span &nbsp;deg

				p Z
					input(type="range", ng-model="sliderRotZ", ng-disabled="checkBoxLookAt", value="0", min="-360", max="360", class="topcoat-range")
					label(ng-bind="sliderRotZ")
					span &nbsp;deg

			div(class="foot")
